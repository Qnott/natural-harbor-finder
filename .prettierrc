{
	"semi": true,
	"trailingComma": "none",
	"singleQuote": true,
	"printWidth": 80,
	"useTabs": true,
	"tabWidth": 2,
	"quoteProps": "as-needed",
	"bracketSpacing": true,
	"arrowParens": "always",
	"overrides": [
		{
			"files": "*.html",
			"options": {
				"parser": "html"
			}
		},
		{
			"files": "*.vue",
			"options": {
				"parser": "vue",
				"singleQuote": false,
				"useTabs": false
			}
		}
	]
}
